<!DOCTYPE html>
<html>
  <head>
    <title>Touron</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>


    <!-- Bootstrap CSS -->
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <div class="navbar-nav">
            <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-link' %>
         
          </div>
        </div>
      </nav>
    <% else %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <div class="navbar-nav">
            <%= link_to "ログイン", new_user_session_path, class: 'nav-link' %>
            <%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary ml-2" %>
          </div>
        </div>
      </nav>
    <% end %>

    <%= yield %>
  </body>
</html>  